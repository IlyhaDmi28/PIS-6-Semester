@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @if (ViewBag.IsAuthorized == true)
    {
        <p>
            Username: @ViewBag.Username
        </p>
        <p>
            Roles: <span class="d-inline-flex gap-2">@foreach (var role in ViewBag.Roles)
            {
                <span class="btn-primary btn">@role</span>
            }
            </span>
        </p>
    }
</div>
